<section id="events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Next Events</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    <% data.events.each_with_index do |event, index| %>
                    <li class="<%= index.odd? ? 'timeline-inverted' : '' %>">
                        <div class="timeline-image">
                            <% if event.image %>
                            <%= image_tag event.image, class: "img-circle img-responsive", alt: event.date %>
                            <% end %>
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4><%= event.date %></h4>
                                <h4 class="subheading"><%= event.title %></h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted"><%= event.description %></p>
                            </div>
                        </div>
                    </li>
                    <% end %>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <h4>Be Part
                                <br>Of Our
                                <br>Story!</h4>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
