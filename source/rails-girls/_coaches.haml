%section
  .container
    .text-center
      %h2.section-heading Our awesome coaches
      .row
        - data.coaches.each do |coach|
          .col-xs-6.col-md-3.portfolio-item
            = link_to "https://twitter.com/#{coach.twitter}", class: 'portfolio-link', rel: 'nofollow' do
              .text-center
                %b= coach.name
                .black
                  @#{coach.twitter}

    .text-center.spaced
      %h3 If you have any questions, join our chat, we don't bite!
      %a.spaced.btn.btn-primary.btn-lg{href: "https://rubyburgers.herokuapp.com/"} Get an invite here
