!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}/


    %title= current_page.data.title || "Ruby Belgium"
    %meta{name: "description", content: current_page.data.description || "The belgian community group promoting ruby usage and ruby jobs market"}/

    = stylesheet_link_tag "all"

    = javascript_include_tag  "all", defer: true
    = yield_content( :head_scripts )

    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>


  %body.animated.fadeIn{class: page_classes}
    = partial :navigation
    = yield
    = google_analytics_universal_tag
